{
    "version": "2.0.0",
    "options": {
        "cwd": "${fileDirname}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake__pre",
            "command": "cmake",
            "args": [
                ".."
            ]
        },
        {
            "label": "make__pre",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j4" // 四线程并行编译
            ]
        },
        {
            "label": "build",
            "dependsOrder": "sequence", // 按列出的顺序执行任务依赖项
            "dependsOn": [
                "cmake__pre", // 
                "make__pre"
            ]
        }
    ]
}