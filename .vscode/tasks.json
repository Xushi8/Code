{
    "version": "2.0.0",
    "options": {
        "cwd": "${fileDirname}"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "single",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                // "-fsanitize=address", // 内存越界检查
                // "-fno-omit-frame-pointer", // 检测到内存错误时打印函数调用栈
                // "-fsanitize=undefined", // 检测未定义行为
                "-g", // -O2是release
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                "-DLOCAL",
                // "-O3",
                "-lfmt",
                "-ltbb",
                // "-march=native",
                // "-fopenmp", // OpemMP
                // "-ffast-math", // 对浮点数有更大胆的优化，确保不会出现NaN和INF时可开启; 如 a /= b 优化为 a *= inv_b, sqrt保证不为负数
                // "-fopt-info", // 显示优化过程的输出
                "-std=c++20",
                "-Wall", // 开启警告
                "-Wextra", // 除Wall外的警告
                "-pedantic", // 使用了扩展语法的地方将产生相应的警告信息
                "-Wshadow", // 当局部变量屏蔽（shadow）已有变量时发出警告
                "-Wconversion", // 在隐式转换可能导致值变化的时候发出警告
                "-Wpointer-arith" // 对函数指针或者void *类型的指针进行算术操作时给出警告
            ]
        }
    ]
}